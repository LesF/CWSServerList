<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CWSServerList.Pages.SettingsPage">

    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Label Text="Database Settings" Style="{StaticResource Headline}" />

        <VerticalStackLayout Spacing="4">
            <Label Text="Server Name" />
            <Entry x:Name="DatabaseServerName" Placeholder="Server Name" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="4">
            <Label Text="Database" />
            <Entry x:Name="DatabaseNameEntry" Placeholder="Database Name" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="4">
            <Label Text="User" />
            <Entry x:Name="UserEntry" Placeholder="User" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="4">
            <Label Text="Password" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        </VerticalStackLayout>
        
        <Button Text="Save" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>
