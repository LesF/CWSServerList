<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CWSServerList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CWSServerList.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="CWSServerList">

    <TabBar>
        <Tab Title="Servers" x:Name="ServersTab">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Logs" x:Name="LogsTab">
            <ShellContent ContentTemplate="{DataTemplate local:LogsPage}" />
        </Tab>
        <Tab Title="Settings" x:Name="SettingsTab">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
